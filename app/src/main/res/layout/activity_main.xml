<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_wallpaper"
    android:paddingTop="100dp"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cavendish_uganda"
        android:layout_gravity="center"
        android:contentDescription="@string/cavendish_logo_alt_text"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_home_screen"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="39dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_textview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:id="@+id/emailEditText"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint_text"
            android:autofillHints="emailAddress"
            android:textColor="@color/black"
            android:background="@drawable/input_field"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="18dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_textview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:id="@+id/passwordEditText"
            android:inputType="textPassword"
            android:hint="@string/password_hint_text"
            android:autofillHints="password"
            android:textColor="@color/black"
            android:background="@drawable/input_field"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="0dp"/>
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:text="@string/button_text"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>